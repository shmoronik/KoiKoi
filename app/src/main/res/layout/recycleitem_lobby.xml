<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/lobbyNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Lobby name"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Join"
        android:textColor="#ff008577"
        app:layout_constraintBottom_toBottomOf="@+id/lobbyDetailsView"
        app:layout_constraintStart_toEndOf="@+id/lobbyDetailsView"
        app:layout_constraintTop_toTopOf="@+id/lobbyNameView" />

    <TextView
        android:id="@+id/lobbyDetailsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="#979797"
        android:textSize="12sp"
        android:text="Lobby players (spectators)"
        app:layout_constraintStart_toStartOf="@+id/lobbyNameView"
        app:layout_constraintTop_toBottomOf="@+id/lobbyNameView" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joinButton" />
</androidx.constraintlayout.widget.ConstraintLayout>